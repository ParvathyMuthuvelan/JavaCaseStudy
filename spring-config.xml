<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
 http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
  http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:annotation-config />
	

	<context:component-scan
		base-package="com.truyum.service,com.truyum.dao" />

	<bean id="dateFormat" class="java.text.SimpleDateFormat">
		<constructor-arg value="dd/MM/yyyy" />
	</bean>


	<bean id="sandwich" class="com.truyum.model.MenuItem">
		<property name="id" value="1" />
		<property name="name" value="Sandwich" />
		<property name="price" value="99.00" />
		<property name="active" value="true" />
		<property name="dateOfLaunch">
			<bean factory-bean="dateFormat" factory-method="parse">
				<constructor-arg value="15/03/2017" />
			</bean>
		</property>
		<property name="category" value="Main course" />
		<property name="freeDelivery" value="true" />

	</bean>

	<bean id="burger" class="com.truyum.model.MenuItem">
		<property name="id" value="2" />
		<property name="name" value="Burger" />
		<property name="price" value="129.00" />
		<property name="active" value="true" />
		<property name="dateOfLaunch">
			<bean factory-bean="dateFormat" factory-method="parse">
				<constructor-arg value="23/12/2017" />
			</bean>
		</property>
		<property name="category" value="Main course" />
		<property name="freeDelivery" value="false" />

	</bean>
	<bean id="menuItems" class="java.util.ArrayList">
	<constructor-arg > 
	<list>
	<ref bean="sandwich"/>
	<ref bean="burger"/>
	</list>
	</constructor-arg>
	</bean>
	
	<bean id="menuItemDao" class="com.truyum.dao.MenuItemDaoCollectionImpl">
	<constructor-arg name="menuItemList"  ref="menuItems">
	
	</constructor-arg>
	</bean>
	<bean id="menuItemService" class="com.truyum.service.MenuItemService"/>
</beans>